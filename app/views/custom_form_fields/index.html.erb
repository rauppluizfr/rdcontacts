<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Custom Fields</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
 <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
             <h4 class="panel-title pull-left" style="padding-top: 8.5px;">
                Custom fields
            </h4>
            <div class="pull-right">
                <%= link_to t(:create), new_custom_form_field_path, class: 'btn btn-primary', remote: true %>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body" id="clients_div">
          <div class="dataTable_wrapper">
              <table class="table table-striped table-bordered table-hover" id="locations-table">
                  <thead>
                      <tr>
                          <th>Name</th>
                          <th>Extra Data</th>
                          <th>Type</th>
                      </tr>
                  </thead>
                  <tbody>
                  <% @fields.each do |field| %>
                      <tr class="odd gradeX">
                          <td><%= field.name %></td>
                          <td>
                            <% field.extra_data.each do |data| %>
                              <%= data.name %>
                            <% end %>
                          </td>
                          <td><%= get_form_type_string(field.type) %></td>
                      </tr>
                  <% end %>
                  </tbody>
              </table>
          </div>
		  </div>
	</div>
</div>
