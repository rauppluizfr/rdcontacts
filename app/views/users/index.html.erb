<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Clients</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
 <div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
             <h4 class="panel-title pull-left" style="padding-top: 8.5px;">
                Clients
            </h4>
            <div class="pull-right">
                <%= link_to t(:create), new_client_path, class: 'btn btn-primary', remote: true %>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body" id="clients_div">
          <div class="dataTable_wrapper">
              <table class="table table-striped table-bordered table-hover" id="locations-table">
                  <thead>
                      <tr>
                          <th>Name</th>
                          <th>E-mail</th>
                      </tr>
                  </thead>
                  <tbody>
                  <% @users.each do |user| %>
                      <tr class="odd gradeX">
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                      </tr>
                  <% end %>
                  </tbody>
              </table>
          </div>
		  </div>
	</div>
</div>
